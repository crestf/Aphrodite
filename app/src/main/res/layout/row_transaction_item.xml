<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="@dimen/row_height"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/lblQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblName"
            android:textSize="@dimen/font_size"
            android:layout_alignParentStart="true"
            android:text="20 December 2018"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lblHargaJual"
            android:textSize="@dimen/font_size_small"
            android:layout_alignParentStart="true"
            android:text="20 December 2018"
            android:textColor="@color/text_color_caption"
            android:layout_below="@+id/lblName"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblQuantity"
        android:gravity="end"
        android:textSize="@dimen/font_size"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_toLeftOf="@+id/lblSubtotal"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblSubtotal"
        android:gravity="end"
        android:textSize="@dimen/font_size"
        android:layout_toLeftOf="@id/btnRemove"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_toLeftOf="@+id/imgRight"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</RelativeLayout>